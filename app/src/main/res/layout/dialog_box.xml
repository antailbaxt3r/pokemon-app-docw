<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:gravity="center_vertical"
            android:orientation="vertical">
        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dialog_box_image_sdv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/red700"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_pokeball"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_box_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main heading"
            android:textSize="21sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/red700"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Secondary Details text"
            android:textSize="14sp"
            android:id="@+id/dialog_box_body"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner"
                android:padding="15dp"
                style="@style/Widget.AppCompat.Button.Borderless"            android:layout_alignParentEnd="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_box_positive_button"
                android:text="CANCEL"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red700"
                android:background="@drawable/rounded_corner"
                android:layout_height="wrap_content"
                android:id="@+id/dialog_box_negative_button"
                android:textColor="@color/white"
                style="@style/Widget.AppCompat.Button.Borderless"            android:layout_alignParentEnd="true"
                android:text="YES" />

        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

